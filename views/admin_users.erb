<% @title = "Users management" %>

<h1 class="page-title">Users management</h1>

<div class="segmented">
  <button class="chip chip--on">Customers</button>
  <button class="chip">Employees</button>
</div>

<div class="toolbar">
  <div class="input-wrap">
  <!-- icon removed -->
    <input id="q" type="search" placeholder="Search for customersâ€¦" />
  </div>

  <div class="toolbar-actions">
    <button id="btn-filters" class="btn ghost">Filters</button>
    <button id="btn-add" class="btn primary">Add new customer</button>
  </div>
</div>

<div class="card table-card">
  <table class="data-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dealerships</th>
        <th>Role</th>
        <th>Status</th>
        <th class="right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td data-label="Name">
            <div class="stack">
              <strong><%= u[:name] %></strong>
              <span class="muted"><%= u[:phone] %></span>
            </div>
          </td>
          <td data-label="Dealerships">
            <div class="switch-wrap">
              <label class="switch">
                <input type="checkbox" <%= "checked" if u[:dealer_active] %>/>
                <span class="slider"></span>
              </label>
              <span><%= u[:dealer] %></span>
              <% if u[:dealer_more] && u[:dealer_more] > 0 %>
                <span class="badge">+<%= u[:dealer_more] %></span>
              <% end %>
            </div>
          </td>
          <td data-label="Role"><%= u[:role] %></td>
          <td data-label="Status">
            <span class="status <%= u[:status_tag] %>"><%= u[:status_text] %></span>
          </td>
          <td class="right" data-label="Actions">
            <div class="menu">
              <button class="icon-btn" aria-haspopup="menu" aria-expanded="false">Menu</button>
              <div class="menu-popover" role="menu">
                <div class="menu-row">
                  <span>Active</span>
                  <label class="switch sm">
                    <input type="checkbox" <%= "checked" if u[:active] %> />
                    <span class="slider"></span>
                  </label>
                </div>
                <button class="menu-item" role="menuitem">Edit profile</button>
